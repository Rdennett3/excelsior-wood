{% javascript %}
  let aboutmm = gsap.matchMedia();

  aboutmm.add('(min-width:900px)', () => {
    let tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.about-wrapper',
        start: 'top 50%',
        end: 'top top',
      },
    });

    tl.from('.about-wrapper h1', {
      y: 250,
      autoAlpha: 0,
    }).to('.about-wrapper h1', {
      y:0,
      autoAlpha: 1,
    });
  });

  aboutmm.add('(max-width:899px)', () => {
    let tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.about-wrapper',
        start: 'top 50%',
        end: 'top top',
      },
    });

    tl.from('.about-wrapper h1', {
      y: 150,
      stagger: 0.05,
      autoAlpha: 0,
    }).to('.about-wrapper h1', {
      stagger: 0.05,
      y: 0,
      autoAlpha: 1,
    });
  });

  // ******************
  // about-section-text
  // ******************

  let abouttxtmm = gsap.matchMedia();

  abouttxtmm.add('(min-width:900px)', () => {
    let tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.about-wrapper',
        start: 'top 30%',
        end: 'top top',
      },
    });

    tl.from('.about-wrapper p', {
      autoAlpha:0,
      y: 250,
      stagger:.25,
    }).to('.about-wrapper p', {
      autoAlpha:1,
      y:0,
      stagger:.25
    });
  });

  abouttxtmm.add('(max-width:899px)', () => {
    let tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.about-wrapper',
        start: 'top 50%',
        end: 'top top',
      },
    });

    tl.from('.about-wrapper p span', {
      y: 150,
      stagger: 0.05,
      autoAlpha: 0,
    }).to('.about-wrapper p span', {
      stagger: 0.05,
      y: 0,
      autoAlpha: 1,
    });
  });
{% endjavascript %}
